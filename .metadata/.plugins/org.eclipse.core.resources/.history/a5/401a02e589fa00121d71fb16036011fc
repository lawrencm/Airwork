			String sNodeRef = (String) jsonObject.get(NODEREF);
			if (sNodeRef != null) {
				JSONObject properties = (JSONObject) node.get(PROPERTIES);
				if (properties != null) {
					String
					sCreatedFrom
					// sAgreementStage = (String)
